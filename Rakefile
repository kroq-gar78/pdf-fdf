################################################################################
require('rake/testtask')

################################################################################
Rake::TestTask.new do |t|
  t.test_files = FileList['test/*_test.rb']
  t.verbose = true
end

################################################################################
desc("Build a gem")
task(:gem) {system('gem', 'build', 'pdf-fdf.gemspec')}

################################################################################
task(:default => :test)
